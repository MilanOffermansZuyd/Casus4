<Window x:Class="Casus4.LocationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casus4"
        mc:Ignorable="d"
        Title="LocationWindow" Height="450" Width="800">
    <Grid>
        <ListView HorizontalAlignment="Center" Height="318" VerticalAlignment="Top" Width="800" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Street" Width="150"/>
                    <GridViewColumn Header="Housenumber" Width="150"/>
                    <GridViewColumn Header="Postal code" Width="150"/>
                    <GridViewColumn Header="Local authority" Width="150"/>
                    <GridViewColumn Header="Country" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="BackToMainFromLocation" Content="Back to main" HorizontalAlignment="Left" Height="68" Margin="0,356,0,0" VerticalAlignment="Top" Width="171"/>
        <Button x:Name="AddLocationFromLocation" Content="Add Location" HorizontalAlignment="Left" Height="68" Margin="176,356,0,0" VerticalAlignment="Top" Width="171"/>
        <Button x:Name="DeleteLocationFromLocation" Content="Delete location" HorizontalAlignment="Left" Height="68" Margin="352,356,0,0" VerticalAlignment="Top" Width="171"/>

    </Grid>
</Window>
